<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://code.alibabatech.com/schema/dubbo        
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <bean id="propertiesDisconf2"
          class="com.baidu.disconf.client.addons.properties.ReloadablePropertiesFactoryBean">
        <property name="locations">
            <list>
                <value>application.properties</value>
            </list>
        </property>
    </bean>

    <bean id="propertyPlaceholderConfigurer2"
          class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="propertiesArray">
            <list>
                <ref bean="propertiesDisconf2"/>
            </list>
        </property>
    </bean>

    <!--&lt;!&ndash; 提供方应用信息，用于计算依赖关系 &ndash;&gt;-->
    <dubbo:application name="productsync"/>

    <dubbo:registry address="zookeeper://${dubbo.zoo}"/>

    <!--  关闭没有服务提供者是报错 -->
    <dubbo:consumer check="false"/>

    <dubbo:annotation package="com.ymatou.productsync.facade"/>

    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo"  port="${dubbo.port}" serialization="kryo"/>

    <dubbo:protocol name="rest" server="tomcat" port="${server.port}" extension="com.ymatou.productsync.infrastructure.config.JacksonConfig"/>
    <!---->

    <!--<dubbo:reference id="productSyncFacade" interface="com.ymatou.productsync.facade.SyncCommandFacade"/>-->
</beans>